<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GoalsFragment"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daily Goal"
            android:textColor="@color/white"
            android:textSize="@dimen/_28ssp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txtMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAX : 00:00"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/bar_minToMax"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="197dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_scale_drawable" />

        <TextView
            android:id="@+id/txtMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIN : 00:00"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/bar_zeroToMin"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="203dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_scale_drawable" />

        <Button
            android:id="@+id/btnSetGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:drawableEnd="@drawable/icon_edit"
            android:text="Set goals"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"/>



    </LinearLayout>

</FrameLayout>